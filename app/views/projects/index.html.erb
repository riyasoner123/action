<style type="text/css">
  
.button-26 {
  appearance: button;
  background-color: #1652F0;
  border: 1px solid #1652F0;
  border-radius: 4px;
  box-sizing: border-box;
  color: #FFFFFF;
  cursor: pointer;
  font-family: Graphik,-apple-system,system-ui,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
  font-size: 14px;
  line-height: 1.15;
  overflow: visible;
  padding: 12px 16px;
  position: relative;
  text-align: center;
  text-transform: none;
  transition: all 80ms ease-in-out;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
  width: fit-content;
}

.button-26:disabled {
  opacity: .5;
}

.button-26:focus {
  outline: 0;
}

.button-26:hover {
  background-color: #0A46E4;
  border-color: #0A46E4;
}

.button-26:active {
  background-color: #0039D7;
  border-color: #0039D7;
}

@media (min-width: 768px) {
  .viewButton {
    padding: 16px 48px;
  }
}
a{
  color: white;
}
</style>
<div class="container">
 <div class="row">
     <% @projects.each do |project| %>
     <div class="col-4 px-2 py-2 mx-2 my-2 " style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; background-color:  #e6e6ff
">
       <div class="container">
         <div class="row">
           <div class="col">
              <h4>Title :-</h4>
           </div>
           <div class="col">
             <h6><%= project.title%></h6>
           </div>
         </div>
         <div class="row">
           <div class="col">
             <h5>Start date:-</h5>
           </div>
           <div class="col">
             <h6><%=project.start_date%></h6>
           </div>
         </div>
         <div class="row">
           <div class="col">
             <h5>End date :-</h5>
           </div>
           <div class="col">
             <h6><%= project.end_date %></h6>
           </div>
         </div>
         <div class="row">
           <div class="col">
             <h5>Active :-</h5>
           </div>
           <div class="col">
             <%if project.active%>
             <h6>yes</h6>
             <%else%>
             <h6>no</h6>
             <%end%>
           </div>
         </div>
         <div class="conatiner text-center">
           <button  class="btn btn-light button-26">
             <%= link_to "View project", project_path(project) %>
           </button>
         </div>
       </div>
     </div>


<%end%>
 </div>
   </div> 
