}

</style>
#hello
<div class="createDiv">
   <%= form_with model: @project, multipart: true do |form|%>
        <div class="row">
            <div class="col-md-4">
                <div class="label">
                    <%=form.label :title, "Title"%>
                </div>
                <div class="input">
                    <%=form.text_field :title, :readonly => true%>
                </div>
            </div>
            <div class="col-md-4">
                <div class="label">
                    <%=form.label :category, "Category" %>
                </div>
                <div class="input">
                    <%=form.select :category , [[ "Ui/Ux", 0], [ "Logo-design", 1], [ "Mobile", 2], [ "Web", 3]], :readonly => true %>
                </div>
            </div>
            <div class="col-md-4">
                <div class="label">
                    <%=form.label :priority, "Priority" %>
                </div>
                <div class="input">
                    <%=form.number_field :priority, in: 1..10, :readonly => true %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="label">
                    <%=form.label :start_date, "Start date" %>
                </div>
                <div class="input">
                    <%=form.date_field :start_date, :readonly => true%>
                </div>
                   
            </div>

            <div class="col-md-4">
                <div class="label">
                    <%=form.label :end_date, "End date" %>
                </div>
                <div class="input">
                    <%=form.date_field :end_date, :readonly => true %>
                </div>
                   
            </div>

            <div class="col-md-4">
                <div class="label">
                    <%=form.label :duration %>
                </div>
                <div class="input">
                    <%=form.number_field :duration, :readonly => true %>
                </div>
                   
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="label">
                    <%=form.label :git_url, "Git url" %>
                </div>
                <div class="input">
                    <%=form.url_field :git_url, :readonly => true %>
                </div>
            </div>

            <div class="col-md-4">
                <div class="label">
                    <%=form.label :live_url, "Live url" %>
                </div>
                <div class="input">
                    <%=form.url_field :live_url, :readonly => true %>
                </div>
            </div>

            <div class="col-md-4">
                <div class="label">
                    <%=form.label :active, "Active" %>
                </div>
                <div class="input">
                    <%=form.select :active, [[ "Yes", true], [ "No", false]], :readonly => true %>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-6">
                <div class="label">
                    <%=form.label :description, "Description" %>
                </div>
                <div class="input">
                    <%=form.text_area :description, :readonly => true %>
                </div>
            </div>

            <div class="col-md-6">
                <div class="label">
                    <%=form.label :challenges, "Challenges" %>
                </div>
                <div class="input">
                    <%=form.text_area :challenges %>
                </div>
            </div>
        </div>
        <%end%>
        <div class="row">
            <div class="col-md-4 text-center">
                <%= link_to "Click here for edit", edit_project_path, :class => "editButton" %>
            </div>
            <div class="col-md-4 text-center">
               <%= link_to "Destroy", project_path(@project),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, :class => "updateButton" %>
        </div>

</div>      