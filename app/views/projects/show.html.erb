    hsl(340deg 100% 32%) 92%,
    hsl(340deg 100% 16%) 100%
  );
  cursor: pointer;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
}

.updateButton:hover {
  background-position: right center;
  /* change the direction of the change here */
  color: #fff;
  text-decoration: none;
}

.updateButton:active {
